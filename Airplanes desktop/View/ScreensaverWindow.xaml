<Window x:Class="Airplanes_desktop.ScreensaverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airplanes_desktop"
        mc:Ignorable="d"
        Title="ScreensaverWindow" Height="540" Width="960"
        xmlns:gif ="https://github.com/XamlAnimatedGif/XamlAnimatedGif" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#FFE2E0ED">
    <Grid Background="#FFE2E0ED">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image gif:AnimationBehavior.SourceUri="AirplanesScreensaveDesktop.gif" Stretch="Fill" Grid.Row="0" Grid.Column="0" OpacityMask="#FFE3E1EE"/>
    </Grid>
</Window>
