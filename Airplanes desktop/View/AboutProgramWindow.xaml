<Window x:Class="Airplanes_desktop.View.AboutProgramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airplanes_desktop.View"
        mc:Ignorable="d"
        Title="О программе" Height="450" Width="800">
    <Grid
        Style="{DynamicResource BackgroundWindowGradient}">
        <TextBlock
            HorizontalAlignment="Center" VerticalAlignment="Center"
            FontFamily="Malgun Gothic" FontSize="20" Width="500" TextWrapping="Wrap"
            Text="Программа создана Соловьевым Даниилом с целью закрытия 1 производственной практики. В дальнейшем планируется развитие приложения, добавление новых функций и совершенствование существующих" TextAlignment="Center" LineHeight="34"/>
        <Button Style="{DynamicResource ButtonStyleMainMenu}"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Content="Главное меню" Margin="0,0,30,20" Click="Button_Click"/>
    </Grid>
</Window>
